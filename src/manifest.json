{
    "name": "Hide GitHub Profile Readme",
    "version": "1.0.0",
    "description": "Browser extension that hides the annoying profile README on GitHub profiles.",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "js": [
                "js/content.js"
            ],
            "css": [
                "css/content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_title": "Hide GitHub Profile Readme"
    },
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    }
}